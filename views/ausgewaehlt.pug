extends layout

block content
    - var spiel
    div.p-3
        div
            h2 Selected

        each val in gutscheine
            if val.spiel == req.query.gutschein
                - spiel = val
                div.pb-3
                    div.pb-0.font-weight-bold=val.spiel
                    a(href="ausgewaehlt?gutschein="+val.spiel)
                        img(src=val.img width="342px")
                div.p-0                   
                    ul.list-group
                        li.list-group-item
                            span.font-weight-bold="Bonus: "
                            span=val.praemie
                        li.list-group-item
                            span.font-weight-bold="Goal: " 
                            span=val.std + " hours"
                        li.list-group-item
                            span.font-weight-bold="Total hours: "
                            span=val.laufzeit
                        li.list-group-item
                            span.font-weight-bold="Max hours per day: "
                            span=val.max
        div.w-100.pt-3
            if !req.query.action
                form(action="/ausgewaehlt")
                    input.d-none.form-control-lg(type="text", name="gutschein", value=req.query.gutschein)
                    input.d-none.form-control-lg(type="text", name="action", value="start")
                    input.btn-primary.btn.btn-lg(type="submit", value="Start")
            else if req.query.action == "start"
                div.pb-1.font-weight-bold Current progress
                div.progress(style="height:35px;")
                    div.progress-bar(role="progressbar" style="width: "+(3*100/spiel.std)+"%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100")="3h/"+spiel.std+"h"
                div
                    table.table
                        thead
                            tr
                                th Date
                                th Hours of sports
                        tbody
                            tr
                                td 25.11.
                                td 1,5
                            tr  
                                td 26.11.
                                td 1
                            tr
                                td 27.11.
                                td 0.5
                            tr  
                                td 28.11.
                                td 1,5
                    form(action="/ausgewaehlt")
                        input.d-none.form-control-lg(type="text", name="gutschein", value=req.query.gutschein)
                        input.d-none.form-control-lg(type="text", name="action", value="sync")
                        input.btn-primary.btn.btn-lg(type="submit", value="Synchronize with tracker")                                

            else if req.query.action == "sync"
                div.pb-1.font-weight-bold Current progress
                div.progress(style="height:35px;")
                    div.progress-bar(role="progressbar" style="width: "+(7*100/spiel.std)+"%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100")="7h/"+spiel.std+"h"

                div
                    table.table
                        thead
                            tr
                                th Date
                                th Hours of sports
                        tbody
                            tr
                                td 25.11.
                                td 1,5
                            tr
                                td 26.11.
                                td 1
                            tr  
                                td 27.11.
                                td 0,5
                            tr  
                                td 28.11.
                                td 1,5
                            tr  
                                td 29.11.
                                td 0,5 
                            tr  
                                td 30.11.
                                td 1
                            tr  
                                td 1.12.
                                td 1                                                                                                
                            
                form(action="/ausgewaehlt")
                    input.d-none.form-control-lg(type="text", name="gutschein", value=req.query.gutschein)
                    input.d-none.form-control-lg(type="text", name="action", value="sync")
                    input.btn-primary.btn.btn-lg(type="submit", value="Synchronize with tracker")
        form(action="/auswahl")
            div.w-100.pt-3
                input.btn-secondary.btn.btn-lg(type="submit", value="Back")
