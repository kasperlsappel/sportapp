extends layout

block content
    div.p-3
      h2 Registrierung
      form(action="registrierung", autocomplete="off")
        .dropdown.p-3
          button#dropdownMenuButton.btn-lg.btn.btn-secondary.dropdown-toggle(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='true')
            | Krankenkasse
          .dropdown-menu(aria-labelledby='dropdownMenuButton')
            div.dropdown-item.firstOption  
              a AOK
            div.dropdown-item.secondOption 
              a DAK
            div.dropdown-item.thirdOption 
              a BKK



        div.w-100.p-3
          input.form-control-lg(type="text", name="E-mail2", placeholder="E-mail")
        div.w-100.p-3
          input.form-control-lg(type="password", name="Passwort", placeholder="Passwort")
        div.w-100.p-3
          input.form-control-lg(type="text", name="Name", placeholder="Name")

        div.w-100.p-3
          input.btn-lg.btn-primary.btn(type="submit", value="Anmelden")